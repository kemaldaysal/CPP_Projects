#include <iostream>
using namespace std;

// https://youtu.be/QEqyyXMgKXE?list=PLIHume2cwmHfmSmNlxXw1j9ZAKzYyiQAq

int main() {

	int *ptr = nullptr; // Herhangi bir yeri göstermeyen bir pointer tanımladık.

	ptr = new int;

	*ptr = 10;

	delete ptr;

	*ptr = 10;

	cout << *ptr << endl;

	return 0;
}
